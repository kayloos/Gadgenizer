<h2>Add gadget</h2>
<%= form_for(@gadget, :url => gadgets_path, :html => { :multipart => true }) do |f| %>

  <div><%= f.label :name %><br />
  <%= f.text_field :name, :autofocus => true %></div>

  <div><%= f.label :description %><br />
  <%= f.text_area :description %></div>

  <div><%= f.label :thumbnail %><br />
  <%= f.file_field :thumbnail %></div>

  <div><%= f.submit "Add gadget" %></div>
<% end %>
